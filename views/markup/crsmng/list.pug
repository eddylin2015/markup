extends ./base.pug

block content
  meta(http-equiv="refresh", content="300")
  a(href="/internal/markup/crsmng/add", class='btn btn-success btn-sm')
    i.glyphicon.glyphicon-plus
    span  Add 
  table#desc
    each book in books
      tr
        td
          .media
            a(href=`/internal/markup/crsmng/${book.course_d_id}`)
              .media-left
              .media-body            
              span= book.course_d_id
            span .
            span= book.session_id
            span .
            span= book.classno
            span .
            span= book.staf_ref
            span .
            span= book.courseName
            span .
            span= book.c_T_type
            span .
            span= book.c_field
            span .
            span= book.c_section_total
            span .
            span= book.tab
            span .
            span= book.groupid
            span .
            span= book.rate
            span .                
            span= book.SPK
      //tr
        td
          small= book.author
            a(href=`/internal/worknote/followlist?rid=${book.id}`) follow list

  if !books.length
    p No work log found.

  if nextPageToken
    nav
      ul.pager
        li
          a(href=`?pageToken=${encodeURIComponent(nextPageToken)}`) More
