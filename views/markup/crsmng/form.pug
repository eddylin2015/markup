        tr        
          td tab
          td 
            input.form-control(type="text", name="tab", id="tab", value=book.tab)
        tr        
          td groupid
          td 
            input.form-control(type="text", name="groupid", id="groupid", value=book.groupid)
        tr        
          td filename
          td 
            input.form-control(type="text", name="filename", id="filename", value=book.filename)
        tr        
