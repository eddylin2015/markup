            each val in [1,2,3,4,5]
              span
                label(class="radio-inline")=  s_v[val] + s_s[val]
                  input(type="radio", name="ce_TchCommu",id= ("ce_TchCommu"+val), value= (s_v[val]), checked= ( book.ce_TchCommu == s_v[val] ? true : false )  )
    .form-group
