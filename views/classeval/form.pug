extends ./base.pug
block content
  link(rel='stylesheet', href='/stylesheets/bootstrap-combobox.css')
  script(src='/javascripts/bootstrap-combobox.js')    
  style.
    input[type=radio] {
        width: 20px;
        height: 20px;
        border: 1px solid black;
        border-radius: 3px;
    }
  script(src='/ckeditor/ckeditor.js')
  //h3 #{title_act} #{action} 
  form(method="POST", enctype="multipart/form-data")
    .form-group.hidden
      label(for="title") 標題
      input.form-control(type="text", name="title", id="title", value=book.title)
    table#tbl
      if book.id
        tr
          td 編號:	
          td 
            span= book.id
      tr  
        td 日期:	
        td 
          .form-group                
            input.form-control(type="text", name="ce_Date", id="ce_Date", value=book.ce_Date)
      tr
        td        
          .form-group.hidden                
            span 學部DEPT:	
        td
          .form-group.hidden                
            input.form-control(type="text", name="ce_Dept", id="ce_Dept", value=book.ce_Dept)
      tr  
        td 節:	
        td 
          .form-group                
            input.form-control(type="text", name="ce_SectNo", id="ce_SectNo", value=book.ce_SectNo)
      tr        
        td 班別 :	
        td 
          .form-group                
            select.form-control.combobox( name="ce_CNo", id="ce_CNo", value=book.ce_CNo)
